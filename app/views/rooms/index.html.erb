
<div class="container-fluid">
  <div class="row">
     <div class="col-3">
       <div class="card">
         <div class="card-body">
          <small>Logged in as</small><br>
          <b><%= current_user.username %></b>
         </div>
       </div>
            <%= render 'form', room: Room.new %>
            <hr>
            <% @rooms.each do |room| %>
             <%= link_to room do %>
               <div class="card mb-2 room-card">
                 <div class="card-body">
                   <span class="name"><%= room.name %></span><br>
                   <small> </small>
                 </div>
               </div>
            <% end %>
          <% end %>
     </div>
     <div class="col-9">
         <% if @room.present? %>
            <div class="chat-room">
              <nav class="navbar navbar-light bg-light mb-4">
                <span class="navbar-brand" href="#"><%= @room.name %>
                  </span>
                    <ul class="navbar-nav">
                      <li class="nav-item">
                        Hello, <%= current_user.username %>
                      </li>
                    </ul>
                  </nav>
                <div id="messages">
                    <% @room.messages.each do |message| %>
                    <div class="message mb-2<%= 'me' if message.user == current_user %>">
                      <div class="content-container">
                        <div class="content">
                             <%= message.content %>
                        </div>
                          <div class="author">
                           <%= message.user.username %>
                          </div>
                        </div>
                      </div>

                  <% end %>
                </div>
               <div class="chat-box">
                 <%= render 'messages/form', message: Message.new, room: @room %>
               </div>
            </div>
         <% end %>
      </div>
   </div>
</div>
